<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:background="@drawable/back2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:textSize="48sp"
        android:id="@+id/resultTitle"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/correctIcon"
        android:layout_width="65dp"
        android:layout_height="81dp"
        android:layout_marginHorizontal="32sp"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/presence_online"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correctText"
        app:layout_constraintTop_toTopOf="@id/correctIcon"
        app:layout_constraintBottom_toBottomOf="@id/correctIcon"
        app:layout_constraintStart_toEndOf="@id/correctIcon"
        android:text="18"
        android:textSize="50sp"
        android:layout_marginHorizontal="16dp"/>
    <ImageView
        android:id="@+id/wrongIcon"
        android:layout_width="65dp"
        android:layout_height="81dp"
        android:layout_marginHorizontal="32sp"
        android:layout_marginTop="32dp"
        android:src="@android:drawable/presence_busy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/correctIcon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wrongText"
        app:layout_constraintTop_toTopOf="@id/wrongIcon"
        app:layout_constraintBottom_toBottomOf="@id/wrongIcon"
        app:layout_constraintStart_toEndOf="@id/wrongIcon"
        android:text="18"
        android:textSize="50sp"
        android:layout_marginHorizontal="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalText"
        app:layout_constraintTop_toBottomOf="@id/wrongIcon"
        app:layout_constraintStart_toStartOf="@id/wrongIcon"
        app:layout_constraintEnd_toEndOf="@id/wrongText"
        android:text="Toatal: 36"
        android:gravity="center"
        android:textSize="45sp"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="26dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>